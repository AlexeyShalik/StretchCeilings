{% extends "@App/layout-admin.html.twig" %}

{% block title %}Редактирование управляющего{% endblock %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block content %}
    <h2 class="sub-header">Редактирование управляющего</h2>

    {{ form_start(userForm, {'attr' : {'class' : 'edit-form'}}) }}
    {{ form_row(userForm.username) }}
    {{ form_row(userForm.plainPassword) }}
    {{ form_row(userForm.email) }}
    {{ form_row(userForm.enabled) }}

    <button type="submit" class="btn control-buttons" formnovalidate>{% trans %}Сохранить{% endtrans %}</button>
    <button type="button" class="btn btn-danger control-buttons" onclick="history.back(-1)">{% trans %}Отмена{% endtrans %}</button>
    {{ form_end(userForm) }}

{% endblock %}