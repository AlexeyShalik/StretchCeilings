            2px 2px 0 #c9004c,
            3px 3px 0 #c9004c,
            4px 4px 0 #c9004c,
            5px 5px 0 #c9004c,
            6px 6px 0 #c9004c,
            7px 7px 0 #c9004c,
            8px 8px 0 #c9004c;

        }
        footer {
            /*opacity: 0.9;*/
            background-color: black;
            height: 300px;
            color: white;
            font-family: Helvetica, sans-serif;
            font-size: 22px;
            text-align: center;
            /*padding-top: 10px;*/
        }

        .contact {
            padding-top: 80px;
        }
    </style>
{% endblock %}

