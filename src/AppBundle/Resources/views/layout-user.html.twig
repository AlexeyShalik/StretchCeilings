{% extends "::base.html.twig" %}

{% block title %}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('bundles/css/bootstrap-social.css') }}" type="text/css" />
    <link rel="stylesheet" href="{{ asset('bundles/css/font-awesome.css') }}" type="text/css" />
    <link rel="stylesheet" href="{{ asset('bundles/css/catalog.css') }}" type="text/css" />
    <link rel="stylesheet" href="{{ asset('bundles/css/layout-user.css') }}" type="text/css" />
{% endblock %}

{% block body %}
    <div class="fluir">
        <header>
            <div class="header row">
                <div class="col-md-5" style="height: 100px; position: relative">
                    <p style="z-index:99; position: absolute; left: 147px; bottom: 40px;">логотип</p>
                    <img style="position: absolute; left: 135px; bottom: 1px; height:80px; width: 80px" src="{{ asset('bundles/image/logotype.jpg') }}">
                    <h3 style="padding-left: 200px; padding-top: 10px">Натяжные потолки</h3>
                </div>
                <div class="col-md-5" style="height: 100px; padding-top: 15px;text-align: center">
                    <p style="color: #c9004c; font-size: 22px">Работаем по всей Минской Области</p>
                    <p><i class="glyphicon glyphicon-time"></i>   Время работы: пн-вс 09:00-18:00</p>
                </div>
                <div class="col-md-2" style="height: 100px; padding-top: 15px">
                    <p><img style="height:24px; width: 32px" src="{{ asset('bundles/image/velcom_logo.png') }}"> +375 29 500 06 00</p>
                    <p><img style="height:30px; width: 30px" src="{{ asset('bundles/image/mtc.jpg') }}"> +375 29 500 06 00</p>
                </div>
            </div>
        </header>

        <nav class="navbar navbar-default navbar-static-top">
            <div class="container">
                <div id="navbar" class="navbar-collapse collapse">
                    {% if page == 'index' %}
                        {{ knp_menu_render('AppBundle:MenuBuilder:frontMenuIndex', {'currentClass': 'active'}) }}
                    {% elseif  page == 'our-works' %}
                    {{ knp_menu_render('AppBundle:MenuBuilder:frontMenuOurWorks', {'currentClass': 'active'}) }}
                    {% endif %}
                </div>
            </div>
        </nav>

        <div class="container-fluid">
            <a class="btn btn-default call-me" id="call-me"
            style=" position: fixed; right:2%; bottom:7%">
                Заказать звонок <i class="glyphicon glyphicon-earphone"></i></a>
        </div>

        <div class="fluir">
            {% block content %}{% endblock %}
        </div>

        <footer class="footer" id="contact">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-4">
                        <img style="height: 300px" src="{{ asset('bundles/image/footer.jpg') }}">
                    </div>
                    <div class="col-md-4 contact">
                        Наши контакты<br><br>
                        <i class="glyphicon glyphicon-phone-alt"></i>
                        +375 29 500 06 00<br>
                        <i class="glyphicon glyphicon-phone"></i>
                        +375 29 500 06 00<br>
                        <i class="glyphicon glyphicon-earphone"></i>
                        +375 29 500 06 00

                    </div>
                    <div class="col-md-4 contact" >
                        Наши аккаунты в социальных сетях:<br><br>
                        <a class="btn btn-social-icon btn-twitter">
                            <span class="fa fa-twitter"></span>
                        </a>
                        <a class="btn btn-social-icon btn-instagram">
                            <span class="fa fa-instagram"></span>
                        </a>
                        <a class="btn btn-social-icon btn-vk">
                            <span class="fa fa-vk"></span>
                        </a>
                        <a class="btn btn-social-icon btn-facebook">
                            <span class="fa fa-facebook"></span>
                        </a>
                        <a class="btn btn-social-icon btn-odnoklassniki">
                            <span class="fa fa-odnoklassniki"></span>
                        </a>
                    </div>
                </div>
            </div>
        </footer>
    </div>

    <div class="popup row" hidden>
        <div class="col-md-6">
            <img style="height:253px; width: 320px; position: relative; bottom: -45px; left: 10px" src="{{ asset('bundles/image/phone.jpg') }}">
        </div>
        <div class="col-md-6">
            <i class="glyphicon glyphicon-remove close"></i>
            <p style="font-size: large;  margin-top: 20px"><strong>Закажите звонок и наш менеджер вам позвонит</strong></p>
            {{ form_start(callMeForm, {'attr' : {'class' : 'edit-form', 'autocomplete' : 'off'}}) }}
                {{ form_row(callMeForm.phone) }}
                {{ form_row(callMeForm.description) }}
                <button type="submit" class="btn control-buttons" >Позвонить</button><span style="color: red;"> Звонок <strong>БЕСПЛАТНЫЙ</strong></span>
            {{ form_end(callMeForm) }}
        </div>
    </div>
    <div id="popup-background" hidden></div>

{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('bundles/js/jquery.maskedinput.min.js') }}"></script>
    <script src="{{ asset('bundles/js/jssor.slider.min.js') }}"></script>
    <script>
        //for scroll menu
        var navbar = $('.navbar');
        var navbarBottom = navbar.offset().top;
        window.onscroll = function() {
            if (navbar.hasClass('navbar-fixed-top') && window.pageYOffset < navbarBottom) {
                navbar.addClass('navbar-static-top');
                navbar.removeClass('navbar-fixed-top');
            } else if (window.pageYOffset > navbarBottom) {
                navbar.addClass('navbar-fixed-top');
                navbar.removeClass('navbar-static-top');
            }
        };

        //for popup call
        var callMe = $('.call-me');
        var close = $('.close');
        var popup = $('.popup');

        callMe.on('click', function () {
            $('#popup-background').attr('hidden', false);
            $('.fluir').css('filter', 'blur(5px)');
            popup.attr('hidden', false);
        });

        close.on('click', function () {
            $('#popup-background').attr('hidden', 'hidden');
            $('.fluir').css('filter', 'unset');
            popup.attr('hidden', 'hidden');
        });

        $('.phone').mask("+375 (99) 999-99-99");

    </script>
{% endblock %}
