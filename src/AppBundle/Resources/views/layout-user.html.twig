{% block javascripts %}
    {{ parent() }}
    <script>
        //for scroll menu
        var navbar = $('.navbar');
        var navbarBottom = navbar.offset().top + navbar.height();
        window.onscroll = function() {
            if (navbar.hasClass('navbar-fixed-top') && window.pageYOffset < navbarBottom) {
                navbar.addClass('navbar-static-top');
                navbar.removeClass('navbar-fixed-top');
            } else if (window.pageYOffset > navbarBottom) {
                navbar.addClass('navbar-fixed-top');
                navbar.removeClass('navbar-static-top');
            }
        };

        //for popup call
        var callMe = $('#call-me');
        var close = $('.close');
        var popup = $('.popup');

        callMe.on('click', function () {
            $('.fluir').css('filter', 'blur(5px)');
            popup.attr('hidden', false);
        });

        close.on('click', function () {
            $('.fluir').css('filter', 'blur(0px)');
            popup.attr('hidden', 'hidden');
        })
    </script>
