{% extends "::base.html.twig" %}

{% block title %}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('bundles/css/bootstrap-social.css') }}" type="text/css" />
    <link rel="stylesheet" href="{{ asset('bundles/css/font-awesome.css') }}" type="text/css" />
    <style>
        body {
            font: 16px 'Segoe UI', arial;
            z-index: 99;
        }
        .navbar-nav > li{
            float:none!important;
            display: table-cell;
        }
        .navbar-nav {
            display: table;
            width: 100%;
        }
        #menu .nav > li > a{
            text-align:center;
        }
        .navbar {
            z-index: 99;
        }
        .popup {
            position: fixed !important;
            top: 30%;
            left: 20%;
            border: solid 0.5px black;
            height: 300px;
            width: 60%;
            border-radius: 10px;
            z-index: 10000 !important;
            background: linear-gradient(to bottom, white, white, white, #f7f7f7);
        }
        .fluir{
